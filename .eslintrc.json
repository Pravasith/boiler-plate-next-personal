{
    "root": true,

    "plugins": ["no-loops"],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "next/core-web-vitals"
    ],
    "rules": {
        "no-loops/no-loops": 2, // 2 means throw an ERROR
        "no-console": 1,
        "no-unused-vars": 2
    },
    "globals": {
        "document": false
    },
    "env": {
        "browser": true,
        "node": true
    }
}
